@page
@model AgenciaTurismo.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout"; // Usar o layout padr√£o
}

<div class="container mx-auto p-4 max-w-sm bg-white rounded-lg shadow-md mt-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>

    <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="space-y-4">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-4"></div>

        <div class="flex flex-col">
            <label asp-for="Input.Username" class="text-gray-700 font-medium mb-1"></label>
            <input asp-for="Input.Username" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Input.Username" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div class="flex flex-col">
            <label asp-for="Input.Password" class="text-gray-700 font-medium mb-1"></label>
            <input type="password" asp-for="Input.Password" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Input.Password" class="text-red-600 text-sm mt-1"></span>
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 ease-in-out">
            Entrar
        </button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
