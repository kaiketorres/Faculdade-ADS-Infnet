@page
@model AgenciaTurismo.Pages.Pacotes.IndexModel
@{
    ViewData["Title"] = "Pacotes Turísticos";
}

<div class="container mx-auto p-4 bg-white rounded-lg shadow-md mt-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>

    <p class="mb-4 text-center">
        <a asp-page="Create" class="inline-block bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200 ease-in-out">
            Criar Novo Pacote
        </a>
    </p>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-300 rounded-md">
            <thead class="bg-gray-100">
                <tr>
                    <th class="py-2 px-4 border-b text-left text-gray-700 font-semibold">@Html.DisplayNameFor(model => model.PacoteTuristico[0].Titulo)</th>
                    <th class="py-2 px-4 border-b text-left text-gray-700 font-semibold">@Html.DisplayNameFor(model => model.PacoteTuristico[0].DataInicio)</th>
                    <th class="py-2 px-4 border-b text-left text-gray-700 font-semibold">@Html.DisplayNameFor(model => model.PacoteTuristico[0].DataFim)</th>
                    <th class="py-2 px-4 border-b text-left text-gray-700 font-semibold">@Html.DisplayNameFor(model => model.PacoteTuristico[0].CapacidadeMaxima)</th>
                    <th class="py-2 px-4 border-b text-left text-gray-700 font-semibold">@Html.DisplayNameFor(model => model.PacoteTuristico[0].Preco)</th>
                    <th class="py-2 px-4 border-b text-left text-gray-700 font-semibold">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.PacoteTuristico) {
                    <tr>
                        <td class="py-2 px-4 border-b">@Html.DisplayFor(modelItem => item.Titulo)</td>
                        <td class="py-2 px-4 border-b">@item.DataInicio.ToShortDateString()</td>
                        <td class="py-2 px-4 border-b">@item.DataFim.ToShortDateString()</td>
                        <td class="py-2 px-4 border-b">@Html.DisplayFor(modelItem => item.CapacidadeMaxima)</td>
                        <td class="py-2 px-4 border-b">@item.Preco.ToString("C")</td>
                        <td class="py-2 px-4 border-b">
                            <a asp-page="./Edit" asp-route-id="@item.Id" class="text-indigo-600 hover:text-indigo-900 mr-2">Editar</a> |
                            <a asp-page="./Details" asp-route-id="@item.Id" class="text-green-600 hover:text-green-900 mr-2">Detalhes</a> |
                            <a asp-page="./Delete" asp-route-id="@item.Id" class="text-red-600 hover:text-red-900">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-8 text-center">
        <a asp-page="/Index" class="inline-block bg-gray-200 text-gray-800 py-2 px-4 rounded-md hover:bg-gray-300 transition duration-200 ease-in-out">
            Voltar para a Home
        </a>
    </div>
</div>
