@page
@model AgenciaTurismo.Pages.DescontoModel
@{
    ViewData["Title"] = "Cálculo de Desconto";
}

<div class="container mx-auto p-4 max-w-md bg-white rounded-lg shadow-md">
    <h1 class="text-2xl font-bold text-gray-800 mb-4 text-center">@ViewData["Title"]</h1>

    <p class="text-gray-600 mb-6 text-center">Informe um preço para aplicar um desconto de 10%.</p>

    <form method="post" class="space-y-4">
        <div class="flex flex-col">
            <label for="InputPrice" class="text-gray-700 font-medium mb-1">Preço Original:</label>
            <input type="number" step="0.01" asp-for="InputPrice" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Ex: 100.00" />
            <span asp-validation-for="InputPrice" class="text-red-600 text-sm mt-1"></span>
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 ease-in-out">
            Calcular Desconto
        </button>
    </form>

    @if (Model.DiscountedPrice > 0)
    {
        <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200 text-center">
            <h2 class="text-xl font-semibold text-blue-800">Resultado:</h2>
            <p class="text-lg text-blue-700 mt-2">
                Preço Original: <span class="font-bold">@Model.InputPrice.ToString("C")</span>
            </p>
            <p class="text-lg text-blue-700">
                Preço com Desconto (10%): <span class="font-bold">@Model.DiscountedPrice.ToString("C")</span>
            </p>
        </div>
    }
</div>
