@page
@model AgenciaTurismo.Pages.Pacotes.CreateModel
@{
    ViewData["Title"] = "Cadastrar Pacote Tur√≠stico";
}

<div class="container mx-auto p-4 max-w-lg bg-white rounded-lg shadow-md mt-8">
    <h1 class="text-2xl font-bold text-gray-800 mb-6 text-center">@ViewData["Title"]</h1>

    <form method="post" class="space-y-4">
        <div class="flex flex-col">
            <label asp-for="PacoteTuristico.Titulo" class="text-gray-700 font-medium mb-1"></label>
            <input asp-for="PacoteTuristico.Titulo" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="PacoteTuristico.Titulo" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div class="flex flex-col">
            <label asp-for="PacoteTuristico.DataInicio" class="text-gray-700 font-medium mb-1"></label>
            <input type="date" asp-for="PacoteTuristico.DataInicio" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="PacoteTuristico.DataInicio" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div class="flex flex-col">
            <label asp-for="PacoteTuristico.DataFim" class="text-gray-700 font-medium mb-1"></label>
            <input type="date" asp-for="PacoteTuristico.DataFim" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="PacoteTuristico.DataFim" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div class="flex flex-col">
            <label asp-for="PacoteTuristico.CapacidadeMaxima" class="text-gray-700 font-medium mb-1"></label>
            <input type="number" asp-for="PacoteTuristico.CapacidadeMaxima" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="PacoteTuristico.CapacidadeMaxima" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div class="flex flex-col">
            <label asp-for="PacoteTuristico.Preco" class="text-gray-700 font-medium mb-1"></label>
            <input type="number" step="0.01" asp-for="PacoteTuristico.Preco" class="px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="PacoteTuristico.Preco" class="text-red-600 text-sm mt-1"></span>
        </div>

        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mt-2"></div>

        <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200 ease-in-out">
            Cadastrar Pacote
        </button>

        <a asp-page="/Index" class="block text-center text-blue-600 hover:underline mt-4">Voltar para a Home</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
